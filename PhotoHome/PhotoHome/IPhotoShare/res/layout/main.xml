<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    >
<ImageView
    android:id="@+id/bg1"
    android:layout_width="fill_parent" 
    android:layout_height="60dp" 
    android:background="@drawable/bg1"
    />
<Button
    android:id="@+id/title"
    android:layout_width="63dp"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:layout_margin="8dp"
    android:background="@drawable/title_home"
    />
<Button
    android:id="@+id/exit"
    android:layout_width="63dp"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_margin="8dp"
    android:background="@drawable/exit"
    android:visibility="gone"
    />
<LinearLayout 
    android:id="@+id/buttons"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bg2"
    >
   <Button
   android:id="@+id/home"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/home"
   android:layout_weight="1"
   ></Button>
   <Button
   android:id="@+id/attention"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/attention"
   android:layout_weight="1"
   ></Button> 
   <Button
   android:id="@+id/collect"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/map"
   android:layout_weight="1"
   ></Button> 
   <Button
   android:id="@+id/photo"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/photo"
   android:layout_weight="1"
   ></Button> 
   <Button
   android:id="@+id/person"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/person"
   android:layout_weight="1"
   ></Button>
  </LinearLayout>
 <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    >
   <ImageView
   android:id="@+id/cycle"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/cycle_1"
   android:layout_weight="1"
   ></ImageView>
   <ImageView
   android:id="@+id/cycle_2"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:layout_weight="1"
   android:visibility="invisible"
   android:background="@drawable/cycle_2"
   ></ImageView> 
   <ImageView
   android:id="@+id/cycle_3"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/cycle_3"
   android:layout_weight="1"
   android:visibility="invisible"
   ></ImageView> 
   <ImageView
   android:id="@+id/cycle_4"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/cycle_4"
   android:layout_weight="1"
   android:visibility="invisible"
   ></ImageView> 
   <ImageView
   android:id="@+id/cycle_5"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/cycle_1"
   android:layout_weight="1"
   android:visibility="invisible"
   ></ImageView>
  </LinearLayout>
  <android.support.v4.view.ViewPager
	android:id="@+id/guidePages"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_above="@id/buttons"
    android:layout_below="@id/bg1"
  />
</RelativeLayout>
