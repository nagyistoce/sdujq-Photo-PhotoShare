<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_2"
    >
<ImageView
    android:id="@+id/bg1_2"
    android:layout_width="fill_parent" 
    android:layout_height="50dp" 
    android:background="@drawable/bg1_2"
    />
<Button
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_alignParentTop="true"
    android:layout_margin="15dp"
    android:background="@drawable/title_home_2"
    />
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bg2_2"
    >
   <ImageView
   android:id="@+id/cycle"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/btnbg_2"
   android:layout_weight="1"
   ></ImageView>
   <ImageView
   android:id="@+id/cycle_2"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:layout_weight="1"
   android:visibility="invisible"
   android:background="@drawable/btnbg_2"
   ></ImageView> 
   <ImageView
   android:id="@+id/cycle_3"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/btnbg_2"
   android:layout_weight="1"
   android:visibility="invisible"
   ></ImageView> 
   <ImageView
   android:id="@+id/cycle_4"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/btnbg_2"
   android:layout_weight="1"
   android:visibility="invisible"
   ></ImageView> 
   <ImageView
   android:id="@+id/cycle_5"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/btnbg_2"
   android:layout_weight="1"
   android:visibility="invisible"
   ></ImageView>
  </LinearLayout>
<LinearLayout 
    android:id="@+id/buttons"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    
    >
   <Button
   android:id="@+id/home"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/home_2"
   android:layout_weight="1"
   ></Button>
   <Button
   android:id="@+id/attention"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/attention_2"
   android:layout_weight="1"
   ></Button> 
   <Button
   android:id="@+id/collect"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/map_2"
   android:layout_weight="1"
   ></Button> 
   <Button
   android:id="@+id/photo"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/photo_2"
   android:layout_weight="1"
   ></Button> 
   <Button
   android:id="@+id/person"
   android:layout_height="fill_parent"
   android:layout_width="wrap_content"
   android:background="@drawable/person_2"
   android:layout_weight="1"
   ></Button>
  </LinearLayout>
 
  <android.support.v4.view.ViewPager
	android:id="@+id/guidePages"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_above="@id/buttons"
    android:layout_below="@id/bg1_2"
  />
</RelativeLayout>
