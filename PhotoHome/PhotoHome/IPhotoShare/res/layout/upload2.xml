<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg_2">
  <ImageView
    android:id="@+id/up_upbg"
    android:layout_width="fill_parent" 
    android:layout_height="60dp" 
    android:background="@drawable/bg1_2"
    />
    <Button
    android:id="@+id/up_back"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_alignParentTop="true"
    android:layout_margin="15dp"
    android:background="@drawable/back_2"
    />
    <Button
    android:id="@+id/up_title_bt"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_margin="15dp"
    android:background="@drawable/title_upload_2"
    
    />
 
     
     

    
    
    <ScrollView 
    android:id="@+id/up_scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:measureAllChildren="true"
    android:layout_below="@id/up_upbg"
    >
    <RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="10dp">
  
  <ImageView
    android:id="@+id/up_img"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:padding="10dp" 
    android:src="@drawable/t8"
    />
	<ImageView 
	  android:layout_width="fill_parent"
	  android:layout_height="40dp"
	  android:layout_marginLeft="10dp"
	  android:layout_marginRight="10dp"
	  android:layout_marginTop="5dp"
	  android:layout_below="@id/up_img"
	  android:background="@drawable/upload_title_2"
	  />
	<EditText
	  android:id="@+id/up_title"
	  android:layout_width="fill_parent"
	  android:layout_height="40dp"
	  android:layout_marginLeft="85dp"
	  android:layout_marginRight="30dp"
	  android:layout_marginTop="7dp"
	  android:layout_below="@id/up_img"
	  android:background="@drawable/none"
	  />
	 <ImageView 
	  android:layout_width="fill_parent"
	  android:layout_height="200dp"
	  android:layout_marginLeft="10dp"
	  android:layout_marginRight="10dp"
	  android:layout_below="@id/up_title"
	  android:layout_marginTop="5dp"
	  android:background="@drawable/description_2"
	  />
	  <EditText
	  android:id="@+id/up_descript" 
	  android:layout_width="fill_parent"
	  android:layout_height="160dp"
	  android:layout_marginLeft="30dp"
	  android:layout_marginRight="30dp"
	  android:layout_below="@id/up_title"
	  android:layout_marginTop="40dp"
	  android:background="@drawable/none"
	  />
	  
	  <ImageView
	   android:id="@+id/share"
	   android:layout_width="60dp"
	   android:layout_height="20dp"
	   android:background="@drawable/share"
	   android:layout_below="@id/up_descript"
	   android:layout_marginLeft="25dp"
	  android:layout_marginRight="10dp"
	  android:layout_marginTop="20dp"
	   />
	   
	 <ImageView
	   android:id="@+id/renren"
	   android:layout_width="fill_parent"
	   android:layout_height="40dp"
	   android:background="@drawable/renren_2"
	   android:layout_below="@id/share"
	   android:layout_marginLeft="10dp"
	  android:layout_marginRight="10dp"
	  android:layout_marginTop="5dp"
	   />
	   <ImageView
	   android:id="@+id/xinlang"
	   android:layout_width="fill_parent"
	   android:layout_height="40dp"
	   android:background="@drawable/xinlang_2"
	   android:layout_below="@id/renren"
	   android:layout_marginLeft="10dp"
	  android:layout_marginRight="10dp"
	  android:layout_marginTop="5dp"
	   />
	   <ImageView
	   android:id="@+id/tengxun"
	   android:layout_width="fill_parent"
	   android:layout_height="40dp"
	   android:background="@drawable/tengxun_2"
	   android:layout_below="@id/xinlang"
	   android:layout_marginLeft="10dp"
	  android:layout_marginRight="10dp"
	  android:layout_marginTop="5dp"
	   />
	   
	   <CheckBox
	   android:id="@+id/renren_check"  
	  android:layout_width="30dp"  
	  android:layout_height="30dp"
	  android:layout_below="@id/share"
	  android:layout_alignParentRight="true"
	  android:layout_marginRight="25dp"
	  android:layout_marginTop="10dp" 
	  style="@style/MyCheckBox2"  
	  /> 
	  <CheckBox 
	  android:id="@+id/xinlang_check"   
	  android:layout_width="30dp"  
	  android:layout_height="30dp"
	  android:layout_below="@id/renren"
	  android:layout_alignParentRight="true"
	  android:layout_marginRight="25dp"
	  android:layout_marginTop="10dp" 
	  style="@style/MyCheckBox2"  
	  /> 
	  <CheckBox
	  android:id="@+id/tengxun_check"    
	  android:layout_width="30dp"  
	  android:layout_height="30dp"
	  android:layout_below="@id/xinlang"
	  android:layout_alignParentRight="true"
	  android:layout_marginRight="25dp"
	  android:layout_marginTop="10dp" 
	  style="@style/MyCheckBox2"  
	  /> 
	   <Button
   android:id="@+id/sns_configure"
   android:layout_width="wrap_content"
   android:layout_height="38dp"
   android:layout_below="@id/tengxun"
   android:background="@drawable/configure_2"
   android:layout_alignParentRight="true"
   android:layout_marginRight="15dp"
   android:layout_marginTop="15dp"
   />
	   
	</RelativeLayout>
    </ScrollView>
</RelativeLayout>
